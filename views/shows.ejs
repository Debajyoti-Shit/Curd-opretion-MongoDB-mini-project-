<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <!-- <form method="GET" action="/add">
            <input type="submit" name="update" value="Add User" class="btn btn-primary">
        </form> -->

      <br />

      <table
        class="
          table table-border table-bordered
          text-center
          shadow
          table-dark table-striped
        "
      >
        <tr>
          <th>User ID</th>
          <th>User Name</th>
          <th>User Email</th>
          <th>User Password</th>

          <th>User Update</th>
          <th>User Delete</th>
        </tr>

        <% users.forEach(function (user) { %>
        <tr>
          <td><%=user._id%></td>
          <td><%=user.name%></td>
          <td><%=user.email%></td>
          <td><%=user.password%></td>

          <td>
            <a href="/edit/<%=user._id %>" class="btn btn-success">Edit</a>
          </td>
          <td>
            <a href="/delete/<%=user._id %>" class="btn btn-danger">Delete</a>
          </td>
        </tr>
        <% })%>
      </table>
    </div>
  </body>
</html>
